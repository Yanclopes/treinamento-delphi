unit Form;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, Math;

type
  Tfrm = class(TForm)
    lbl: TLabel;
    procedure FormCreate(Sender: TObject);
  private
    procedure calc();
    function subCalc(pValueA, pValueB: Integer): Double;
    { Private declarations }
  public
    constructor Create(AOwner: TComponent);
    { Public declarations }
  end;

var
  frm: Tfrm;

implementation

{$R *.dfm}

constructor Tfrm.Create(AOwner: TComponent);
begin
  inherited Create(AOwner);

  calc();
end;

procedure Tfrm.FormCreate(Sender: TObject);
begin
  calc();
end;
procedure Tfrm.calc();
var
  Resultado: Double;
begin
  lbl.Caption := FloatToStr( subCalc(15, 8) + subCalc(6, 12) + subCalc(7, 21));
end;

function Tfrm.subCalc(pValueA, pValueB: Integer): Double;
begin
  Result:= (pValueA + Sqrt(pValue)) / (pValueB + Sqrt(pValueA));
end;

end.

