unit Form;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls;

type
  Tfrm = class(TForm)
    lbledt: TLabeledEdit;
    btn: TButton;
    mmo: TMemo;
    procedure btnClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frm: Tfrm;

implementation

{$R *.dfm}

procedure Tfrm.btnClick(Sender: TObject);
var
  num, oldNum, temp, i, sum: Integer;
begin
  if not TryStrToInt(lbledt.Text, num) then
  begin
    ShowMessage('Valide o valor e tente novamente.');
    Exit;
  end;
  oldNum:= 0;
  sum:= 1;
  mmo.Lines.Add(IntToStr(sum));
  for i := 1 to num do
  begin
    mmo.Lines.Add(IntToStr(sum));
    oldNum:= sum;
    sum:= oldNum + sum;
  end;
end;

end.
