begin
  if (not TryStrToInt(edt.Text, vYear)) then
  begin
    ShowMessage('Verifique os valores e tente novamente!');
    Exit;
  end;

  if vYear mod 4 = 0 then
    begin
      if (vYear mod 100 = 0) and (vYear mod 400 <> 0) then
      begin
        ShowMessage('n�o � bissexto');
        Exit;
      end;
      ShowMessage('� bissexto');
    end
  else
    ShowMessage('n�o � bissexto');
end;

